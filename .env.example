# Copy to .env for local testing. In GitHub Actions, set these as repository secrets.
PORT=3000


# Supabase (use SERVICE_ROLE_KEY for server-side writes in Actions)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key


# MailerSend
MAILERSEND_API_KEY=ms.your_mailersend_key
MAIL_FROM=pricewatcher@yourdomain.com
ALERT_TO=you@your.email


# Price provider keys (use at least one)
PRICEAPI_KEY=your_priceapi_key
KEEPA_API_KEY=your_keepa_key
SERPAPI_KEY=your_serpapi_key


# Alerts
ALERT_PERCENT_THRESHOLD=8
ALERT_ABSOLUTE_THRESHOLD=20


# Optional: comma-separated list of watched item IDs (if you prefer env config)
# WATCHER_ITEMS should be a JSON string of the form:
# [{"id":"ryzen-7-9800x3d","label":"AMD Ryzen 7 9800X3D","queries":[{"type":"priceapi","q":"AMD Ryzen 7 9800X3D"},{"type":"keepa","asin":"B0..."}]}, ...]
WATCHER_ITEMS=
